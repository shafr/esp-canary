name: No-build test

on:
  - push
  - pull_request

jobs:
  test_builds:

    runs-on: ubuntu-latest

    steps:
      - name: Run PlatformIO for nodemcuv2
        run: |
          echo "RAM_SIZE=55.3%" >> $GITHUB_ENV
          echo "FLASH_SIZE=33.2%" >> $GITHUB_ENV

      - name: Print Ram Size

        run: echo "${{ env.RAM_SIZE }}"

      - name: Print Flash Size
        run: echo "${{ env.FLASH_SIZE }}"

      - uses: jdvr/action-add-comment@main
        with:
          comment: "RAM ðŸ’¾: $RAM | FLASH ðŸ—œ : $FLASH_SIZE"
        env:
          GITHUB_TOKEN: ${{github.token}}
          RAM: "${{ env.RAM_SIZE }}"
          FLASH: "${{ env.FLASH_SIZE }}"